{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {},
  "overrides": [
    {
      "files": ["*.js"],
      "rules": {
        "quotes": ["warn", "single"],
        "semi": ["warn", "never"],
        "no-unused-vars": 0,
        "max-classes-per-file": ["error", 2],
        "no-plusplus": "off",
        "no-console": "off",
        "no-underscore-dangle": "off",
        "consistent-return": "warn",
        "prefer-destructuring": "warn",
        "no-param-reassign": "off"
      }
    }
  ]
}
